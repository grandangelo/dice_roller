<Window x:Class="DiceRoller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DiceRoller"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource MahApps.Styles.Button}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MahApps.Styles.TextBox}">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            <Style TargetType="RowDefinition">
                <Setter Property="Height" Value="50"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D4"/>
        <Button Grid.Row="0"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d4"/>
        <TextBox Grid.Row="0"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D4Number}"/>
        <Button Grid.Row="0"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d4"/>
        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D6"/>
        <Button Grid.Row="1"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d6"/>
        <TextBox Grid.Row="1"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D6Number}"/>
        <Button Grid.Row="1"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d6"/>
        <TextBox Grid.Row="2"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D8"/>
        <Button Grid.Row="2"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d8"/>
        <TextBox Grid.Row="2"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D8Number}"/>
        <Button Grid.Row="2"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d8"/>
        <TextBox Grid.Row="3"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D10"/>
        <Button Grid.Row="3"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d10"/>
        <TextBox Grid.Row="3"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D10Number}"/>
        <Button Grid.Row="3"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d10"/>
        <TextBox Grid.Row="4"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D12"/>
        <Button Grid.Row="4"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d12"/>
        <TextBox Grid.Row="4"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D12Number}"/>
        <Button Grid.Row="4"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d12"/>
        <TextBox Grid.Row="5"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D20"/>
        <Button Grid.Row="5"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d20"/>
        <TextBox Grid.Row="5"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D20Number}"/>
        <Button Grid.Row="5"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d20"/>
        <TextBox Grid.Row="6"
                 Grid.Column="0"
                 FontSize="20"
                 FontWeight="Light"
                 FontStyle="Italic"
                 IsReadOnly="True"
                 Text="D100"/>
        <Button Grid.Row="6"
                Grid.Column="1"
                Content="-"
                Command="{Binding DecreaseDiceCommand}"
                CommandParameter="d100"/>
        <TextBox Grid.Row="6"
                 Grid.Column="2"
                 IsReadOnly="True"
                 Text="{Binding D100Number}"/>
        <Button Grid.Row="6"
                Grid.Column="3"
                Content="+"
                Command="{Binding IncreaseDiceCommand}"
                CommandParameter="d100"/>
        <Button Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Content="Roll"
                Command="{Binding RollCommand}"/>
        <TextBox Grid.Row="8"
                 Grid.Column="0"
                 Grid.ColumnSpan="4"
                 Text="{Binding Result}"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
